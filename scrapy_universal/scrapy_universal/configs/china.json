{
  "spider":"universal",
  "website":"中华网科技",
  "type":"新闻",
  "index":"http://tech.china.com/",
  "settings":{
    "USER_AGENT":"Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/66.0.3359.139 Safari/537.36"
  },
  "start_urls":[
    "http://tech.china.com:8000/articles/"
  ],
  "allowed_domains":[
    "tech.china.com"
  ],
  "rules":"china",

  "item": {
    "class": "NewsItem",
    "loader": "ChinaLoader",
    "attrs": {
      "title": [
        {
          "method": "xpath",
          "args": [
            "//h1[@id='chan_newsTitle']/text()"
          ]
        }
      ],
      "url": [
        {
          "method": "attr",
          "args": [
            "url"
          ]
        }
      ],
      "text": [
        {
          "method": "xpath",
          "args": [
            "//div[@id='chan_newsDetail']//text()"
          ]
        }
      ],
      "datetime": [
        {
          "method": "xpath",
          "args": [
            "//div[@id='chan_newsInfo']/text()"
          ],
          "re": "(\\d+-\\d+-\\d+\\s\\d+:\\d+:\\d+)"
        }
      ],
      "source": [
        {
          "method": "xpath",
          "args": [
            "//div[@id='chan_newsInfo']/text()"
          ],
          "re": "来源：(.*)"
        }
      ],
      "website": [
        {
          "method": "value",
          "args": [
            "中华网"
          ]
        }
      ]
    }
  }
}